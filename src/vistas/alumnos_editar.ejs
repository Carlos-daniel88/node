<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('secciones/libreria.html') %>
    <title>Document</title>
</head>
    <body>
        <%- include('secciones/header.html') %>
        <div id="principal">
            <div id="contenido">
                <div class="row">
                    <div class="col col-4">
                        <form action="/alumnos/modificar/<%=fila[0].NL%>" method="post">
                            <input type="text" name="tfNL"      value="<%=fila[0].NL%>" id="tfNL" placeholder="Numero de lista" class="form-control mt-1">
                            <input type="text" name="tfNombre"  value="<%=fila[0].Nombre%>" id="tfNombre" placeholder="Nombre" class="form-control mt-2">
                            <input type="text" name="tfPaterno" value="<%=fila[0].Paterno%>" id="tfPaterno" placeholder="Apellido paterno" class="form-control mt-2">
                            <input type="text" name="tfMaterno" value="<%=fila[0].Materno%>" id="tfMaterno" placeholder="Apellido Materno" class="form-control mt-2">
                            <button type="submit" class="btn btn-primary mt-2">Modificar</button>
                        </form>
                    </div>
                    <div class="col col-8">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>NL</th>
                                    <th>Nombre</th>
                                    <th>Paterno</th>
                                    <th>Materno</th>
                                    <th colspan="2">Opciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(var i=0; i<data.length; i++) {%>
                                    <tr>
                                        <td><%=data[i].NL%></td>
                                        <td><%=data[i].Nombre%></td>
                                        <td><%=data[i].Paterno%></td>
                                        <td><%=data[i].Materno%></td>
                                        <td width="50">
                                            <!--<a href="/alumnos/editar/<%= data[i].NL%>" class="btn btn-sm btn-warning">Editar</a> -->
                                            <form action="/alumnos/editar" method="post">
                                                <input type="hidden" name="tfNL" value="<%=data[i].NL%>"/>
                                                <button type="submit" class="btn btn-sm btn-warning">Editar</button>
                                            </form>
                                        </td>
                                        <td width="50">
                                            <a href="/alumnos/eliminar/<%= data[i].NL%>" class="btn btn-sm btn-danger">Eliminar</a>
                                        </td>
                                    </tr>    
                                    <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <%- include('secciones/footer.html') %>
    </body>
</html>